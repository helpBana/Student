<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="4dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/image"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/image" />

            <TextView
                android:id="@+id/heights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/role"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/image" />

            <TextView
                android:id="@+id/weights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/heights"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/image" />

            <TextView
                android:id="@+id/countries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weights"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/image" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/countries"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/image" />

            <TextView
                android:id="@+id/formats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comments"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:text="amin"
                android:layout_toRightOf="@id/image" />


        </RelativeLayout>

        <Button
            android:id="@+id/rcy_edit"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="-50dp"
            android:textAllCaps="false"
            android:ems="10"
            android:text="Edit" />

        <ImageButton
            android:id="@+id/rcy_delete"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="-50dp"
            android:visibility="gone"
            android:textAllCaps="false"
            android:src="@drawable/ic_delete_black_24dp"
            android:ems="10"
            android:text="Delete" />

        <ImageButton
            android:id="@+id/rcy_delete2"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="-50dp"
            android:visibility="gone"
            android:textAllCaps="false"
            android:src="@drawable/ic_delete_yeni"
            android:ems="10"
            android:text="Edit" />


    </androidx.cardview.widget.CardView>

</LinearLayout>